{
    "name": "mcg/google-auth-service",
    "description": "Librerías en PHP para facilitar la autentificación hacia los servicios de Google como Gmail, Google  Drive usando las REST APIs de Google.",
    "require": {
        "php": "^7.2",
        "google/apiclient": "^2.8"
    },
    "authors": [
        {
            "name": "Marco Cantu Gea",
            "email": "marco.cantu@gme.mx"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "GoogleServices\\Mail\\":"src/GoogleServices/Mail/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
